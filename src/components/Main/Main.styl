block() {
  padding: 12px 16px
  font-family: Roboto
  font-size: 14px
  line-height: 1.25rem
  width: 240px
  margin: 16px
  border-radius: 8px
  border: 1px solid #ccc;
  word-break: break-word;
}

.more {
  block();
  background-color #8effea
  border: none;
  -webkit-appearance button
  cursor pointer
  outline none
  position: sticky;
  top: 20px;
  &:focus {
    background-color #8addce;
  }
  &:hover {
      background-color #72d5c3;
  }
  &:active {
    background-color #59a093;
  }
}

.wrap {
  margin: 0 auto;
  width: 100%;
  height: 100%;
  max-width: 100%;
  overflow-y: auto;
}

.content {
  display: flex;
  flex-wrap: wrap;
  align-items: flex-start;

  @media screen and (max-width: 600px) {
    justify-content: center;
  }
}

.block {
  block();
}

.waiting {
  block();
  background-image url('assets/favicon.png');
  padding: 40px;
  background-size: contain;
  background-position: left;
  background-repeat: no-repeat;
  padding-left: 105px;
}
