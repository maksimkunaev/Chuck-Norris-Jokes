@import '../../css/base.styl'

block() {
  padding: 12px 16px
  font-family: Roboto
  font-size: 14px
  line-height: 1.25rem
  width: 240px
  margin: 16px
  border-radius: 8px
  border: 1px solid #ccc;
}

.more {
  block();
  background-color #8effea
  border: none;
}

.wrap {
  display: flex;
  flex-wrap: wrap;
  align-items: flex-start;
}

.block {
  block();
}

.waiting {
  block();
  background-image url('assets/favicon.png');
  padding: 40px;
  background-size: contain;
  background-position: left;
  background-repeat: no-repeat;
  padding-left: 105px;
}
