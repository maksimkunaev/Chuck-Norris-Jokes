block() {
  padding 12px 16px
  font-family Roboto, sans-serif
  font-size 14px
  line-height 1.25rem
  width 240px
  margin 16px
  border-radius 8px
  border 1px solid #ccc
  word-break break-word
}

.wrap {
  margin 0 auto
  width 100%
  height 100%
  max-width 100%
  overflow-y auto
}

.content {
  display flex
  flex-wrap wrap
  align-items flex-start

  @media screen and (max-width 600px) {
    justify-content center
  }
}

.block {
  block()
}

.more {
  block()
  background-color #8effea
  border none
  appearance button
  cursor pointer
  outline none
  position sticky
  top 20px

  &:focus {
    background-color #8addce
  }
  &:hover {
    background-color #72d5c3
  }
  &:active {
    background-color #59a093
  }
}

.waiting {
  block()
  background-image url('../../assets/chuck.png')
  background-size contain
  background-position left
  background-repeat no-repeat
  padding 40px
  margin-left 105px
}